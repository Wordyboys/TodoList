@page
@using TodoMini.Model;
@model TodoMini.Pages.TodoModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{

	<h1>Todo List</h1>

	<div style="width:600px">
	
		<form method="post">
	
			<div >
				<label class="form-label">Title</label>
				<input type="text" name="Title" maxlength="50" style="width:600px"/>
							
			</div>
		
			<div class="Text_Box">
				<label class="form-label">Description</label>
				<textarea rows="4" name="Description" maxlength="300" style="width:600px; height:250px" ></textarea>				
			</div>

			<div class="Date_Box">
				<label class="form-label">Date</label>
				<input type="date" asp-format="{0 yyyy-mm-dd}" class="form-control" name="Date" style="width:600px" />
			</div>

			<button type="submit">Add </button>		
		
		</form>
	
	</div>

	<table class="table">

		<thead>
			<tr>	
				<th>Title</th>
				<th>Description</th>
				<th>Date</th>
			</tr>
		</thead>

		<tbody>
			@foreach(TodoList todo in Model.Todo)
			{
				<tr>

					<td>
						@todo.Title
					</td>

					<td>
						@todo.Description
					</td>

					<td>
						@todo.Date
					</td>

				</tr>
			}
		</tbody>
			
	</table>
}
